String urlencode(String str) {
    String encodedString = "";
    char c;
    for (int i = 0; i < str.length(); i++) {
        c = str.charAt(i);
        if (isalnum(c)) {
            encodedString += c;
        } else {
            char code0 = ((c >> 4) & 0xF) + '0';
            char code1 = (c & 0xF) + '0';
            if (code0 > '9') code0 += 7;
            if (code1 > '9') code1 += 7;
            encodedString += '%';
            encodedString += code0;
            encodedString += code1;
        }
    }
    return encodedString;
}
